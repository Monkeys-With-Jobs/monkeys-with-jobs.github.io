---
import DefaultLayout from "../layouts/DefaultLayout.astro";
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
import logoWhite from '../assets/dyer-expedition/logo-white.svg';
import background from '../assets/dyer-expedition/background.webp';
---

<DefaultLayout>
  <!-- Hero Section -->
  <section class="relative py-20 md:py-32 overflow-hidden">
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <Image class="mx-auto mb-8 max-h-48" src={logo} alt="Monkeys With Jobs Logo" width={162} height={122} />
        
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white">Creating Immersive Gaming Experiences</h1>
        
        <p class="text-xl md:text-2xl mb-8 text-gray-300">
          <em>Monkeys With Jobs</em> is an Austrian indie game development studio founded in 2022.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/games" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-secondary bg-primary hover:bg-primary/80 transition-colors duration-300">
            Our Games
          </a>
          <a href="/games/dyer-expedition" class="inline-flex items-center justify-center px-6 py-3 border border-white/20 text-base font-medium rounded-md text-white hover:bg-white/10 transition-colors duration-300">
            Dyer Expedition
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Game Section -->
  <section class="py-16 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Our First Game</h2>
          <div class="h-1 w-20 bg-primary mx-auto"></div>
        </div>
        
        <div class="grid md:grid-cols-2 gap-8 items-center">
          <div>
            <Image class="w-full max-w-md mx-auto" src={logoWhite} alt="Dyer Expedition Logo" width={680} height={514} />
            <p class="mt-6 text-gray-300">
              A puzzle adventure game with light Lovecraftian horror elements. The story is inspired by Lovecraft's At the Mountains of Madness.
            </p>
            <div class="mt-6">
              <a href="/games/dyer-expedition" class="inline-flex items-center text-primary hover:text-primary/80">
                Learn more
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </a>
            </div>
          </div>
          <div class="aspect-w-16 aspect-h-9">
            <iframe class="w-full h-full rounded-lg shadow-lg" src="https://www.youtube-nocookie.com/embed/aoKi-mzx9n0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        </div>
      </div>
    </div>
  </section>
</DefaultLayout>
