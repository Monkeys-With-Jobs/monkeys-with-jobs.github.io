---
import DefaultLayout from "../layouts/DefaultLayout.astro";
---

<DefaultLayout>
  <section class="py-20 flex items-center justify-center min-h-[50vh]">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-7xl md:text-9xl font-bold text-primary mb-4">404</h1>
      <p class="text-xl md:text-2xl text-gray-400 mb-8">Page not found</p>
      <a href="/" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary hover:bg-secondary transition-colors duration-300">
        Back to Home
      </a>
    </div>
  </section>
</DefaultLayout>
